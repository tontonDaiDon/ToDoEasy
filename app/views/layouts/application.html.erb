<!DOCTYPE html>
<html>
  <head>
    <title>ToDoEasy2</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-light text-dark">

    <% if user_signed_in? %>
      <!-- ナビゲーション -->
      <header class="app-header">
        <div class="header-container">
          <!-- 左：ロゴ -->
          <%= link_to "ToDoEasy", root_path, class: "app-logo" %>

          <!-- 中央：あいさつ -->
          <div class="header-user">
            こんにちは、<%= (current_user&.nickname.presence || current_user&.email) %> さん
          </div>

          <!-- 右：ログアウト -->
          <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "logout-btn" %>
        </div>
      </header>
    <% end %>

    <!-- フラッシュメッセージ -->
    <div class="container">
      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flash[:notice] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= flash[:alert] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
    </div>

    <!-- メインコンテンツ -->
    <main class="container mb-5">
      <%= yield %>
    </main>

    <!-- フッター -->
    <footer class="app-footer bg-white border-top text-center text-muted py-3">
      <small>&copy; 2025 ToDoEasy. All rights reserved.</small>
    </footer>
  </body>
</html>
