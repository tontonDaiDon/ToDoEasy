<h1>買い物リストを編集</h1>

<%= form_with(model: @shopping_list, local: true) do |form| %>
  <div>
    <%= form.label :name, "リスト名" %><br>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :budget, "予算（円）" %><br>
    <%= form.number_field :budget %>
  </div>
  <br>
  <div class="form-actions">
    <%= form.submit "更新", class: "btn btn-success mb-1" %>
    <%= button_to 'このリストを削除',
              shopping_list_path(@shopping_list),
              method: :delete,
              data: { confirm: '本当に削除しますか？' },
              form: { data: { turbo: false } },
              class: "btn btn-delete mb-1" %>
  </div>
<% end %>


    
