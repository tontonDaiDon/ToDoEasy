<h1>新しい買い物リストを作成</h1>

<%= form_with(model: @shopping_list, local: true) do |form| %>
  <div>
    <%= form.label :name, "リスト名" %><br>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :budget, "予算（円）" %><br>
    <%= form.number_field :budget, min: 0, class: "no-spin" %>
  </div>
  <div>
    <%= form.submit "作成" %>
  </div>
<% end %>

<% if @shopping_list.errors.any? %>
  <div class="error-messages">
    <h2><%= @shopping_list.errors.count %>件のエラーがあります</h2>
    <ul>
      <% @shopping_list.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= link_to '一覧に戻る', shopping_lists_path %>