<h1>アイテムを編集</h1>

<%= form_with(model: [@shopping_list, @item], local: true) do |form| %>
  <div>
    <%= form.label :name, "商品名" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :quantity, "数量" %>
    <%= form.number_field :quantity, min: 1 %>
  </div>
  <div>
    <%= form.submit "更新" %>
  </div>
<% end %>

<%= link_to '買い物前に戻る', before_shopping_shopping_list_path(@shopping_list) %>
